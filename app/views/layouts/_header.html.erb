<header>
<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">

    
      <%= link_to "finance institute", root_path, class: "brand" %>

      <!-- the new toggle buttons -->

      <ul class="nav pull-right">

        <li class="toggle-primary-sidebar hidden-desktop" data-toggle="collapse" data-target=".nav-collapse-primary"><button type="button" class="btn btn-navbar"><i class="icon-th-list"></i></button></li>

        <li class="hidden-desktop" data-toggle="collapse" data-target=".nav-collapse-top"><button type="button" class="btn btn-navbar"><i class="icon-align-justify"></i></button></li>

      </ul>

      <% unless defined? @no_controls %>
          <%# we're not showing these on some pages (ex: login). these pages define a no-controls variable %>
       <% if user_signed_in? %>

          <div class="nav-collapse nav-collapse-top collapse">

            <ul class="nav full pull-right">
              <li class="dropdown user-avatar">

                <!-- the dropdown has a custom user-avatar class, this is the small avatar with the badge -->

                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span>
                  	<span class="menu-avatar">
                      <%= gravatar_for(current_user) %>
                    </span>
                      <span><%= current_user.name %> <i class="icon-caret-down"></i></span>
                    <span class="badge badge-dark-red">5</span>
                  </span>
                </a>

                <ul class="dropdown-menu">

                  <!-- the first element is the one with the big avatar, add a with-image class to it -->

                  <li class="with-image">
                    <div class="avatar">
                      <%= gravatar_for(current_user) %>
                    </div>
                    <span><%= current_user.name %></span>
                  </li>

                  <li class="divider"></li>

                  <li><%= link_to '<i class="icon-user"></i> Profile'.html_safe, current_user %></li>
                  <li><%= link_to '<i class="icon-cog"></i> Settings'.html_safe, edit_user_registration_path(current_user) %></li>
                  <li><%= link_to '<i class="icon-off"></i> Sign out'.html_safe, destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            </ul>

            <form class="navbar-search pull-right">
              <input type="text" class="search-query animated" placeholder="Search">
              <i class="icon-search"></i>
            </form>

            <ul class="nav pull-right">
              
              <li><%= link_to '<i class="icon-home"></i> Home'.html_safe, root_path, title: "Go home" %></li>
              <li><%= link_to '<i class="icon-user"></i> Users'.html_safe, users_path, title: "Manage Users" %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Action</a></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Some link</a></li>
                  <li><a href="#">One more separated link</a></li>
                </ul>
              </li>

            </ul>

          </div>
          <% else %>

          <ul class="nav pull-right">
              <li ><a href="#" title="Go home"><i class="icon-home"></i> Home</a></li>
               <li><%= link_to '<i class="icon-user"></i> Sign in'.html_safe, new_user_session_path %></li>


            </ul>

          <% end %>
      <% end %>

    </div>
  </div>
</div>
</header>