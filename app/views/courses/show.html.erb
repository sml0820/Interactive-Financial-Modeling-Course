<h1><%= @course.title %></h1>
<%= render 'take_course_form' if signed_in? %>

<%= link_to "Go to Course!", '#' , class: "btn btn-large btn-primary btn-block" %>

<ol class="questions">
<% @course.levels.each do |level| %>
  <li>
  	<%= level.title %>
  	<ol class="answers">
  		<% level.steps.each do |step| %>
  		<li>
  		<%= link_to step.description, course_level_step_path(@course.id, level.id, step.id) %></li>
  		<% end %>
  	</ol>
  </li>
  <% end %>
</ol>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back to Courses', course_path %>