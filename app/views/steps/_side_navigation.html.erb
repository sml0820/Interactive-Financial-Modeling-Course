<div class="sidebar-background">
  <div class="primary-sidebar-background"></div>
</div>


<div class="primary-sidebar">

 <!-- Main nav -->
  <ul class="nav nav-collapse collapse nav-collapse-primary">

    <% icon= ["icon-link", "icon-bar-chart", "icon-edit", "icon-beaker","icon-link", "icon-bar-chart", "icon-edit", "icon-beaker"] %>
    <% link = 0 %>

    <% @step_list.each_with_index do |step, i| %>

    <% case step.media_type %>
    <% when 'video' %>
    <% link += 1 %>
            <li class="<%= nav_active link %>">
              <span class="glow"></span>
              <a href="<%= link %>">
                  <i class='icon-info-sign icon-2x'></i>
                  <span>Video</span>
              </a>
            </li>


    <% when 'excel' %>
    <% link += 1 %>
            <li class="<%= nav_active link %>">
              <span class="glow"></span>
              <a href="<%= link %>">
                  <i class="<%= icon[i] %> icon-2x"></i>
                  <span>Step <%= i %> </span>
              </a>
            </li>

    <% else %>
    <% link += 1 %>
            <li class="<%= nav_active link %>">
              <span class="glow"></span>
             <a href="<%= link %>">
                  <i class="<%= icon[i] %> icon-2x"></i>
                  <span>Step <%= i %></span>
              </a>
            </li>
 
    <% end %>   
  <% end %>
 
  </ul>

  <div class="hidden-tablet hidden-phone">
    <div class="text-center" style="margin-top: 60px">
      <div class="easy-pie-chart-percent" style="display: inline-block" data-percent="89"><span>89%</span></div>
      <div style="padding-top: 20px"><b>Percent Complete</b></div>
    </div>

    <hr class="divider" style="margin-top: 60px">

    <div class="sparkline-box side">

      <div class="sparkline-row">
        <h4 class="gray"><span>Orders</span> 847</h4>
        <div class="sparkline big" data-color="gray"><!--<%= random_numbers(12).join(",") %>--></div>
      </div>

      <hr class="divider">
      <div class="sparkline-row">
        <h4 class="dark-green"><span>Income</span> $43.330</h4>
        <div class="sparkline big" data-color="darkGreen"><!--<%= random_numbers(12).join(",") %>--></div>
      </div>

      <hr class="divider">
      <div class="sparkline-row">
        <h4 class="blue"><span>Reviews</span> 223</h4>
        <div class="sparkline big" data-color="blue"><!--<%= random_numbers(12).join(",") %>--></div>
      </div>

      <hr class="divider">
    </div>
  </div>

</div>