<% if @courses.any? %>
  <ul>
    <%- @courses.each do |course| %>
	<div class="row-fluid">
	  <div class="span-center span8">
	    <div class="box">
	      <div class="box-header">
	        <span class="title"><i class="icon-th-list"></i></span>
	      </div>
	      <div class="box-content">
	        <div class="justgage" data-labels="false" data-title="%" id="<%= random_string %>"></div>
	        <h3 class="align-center">
	          <%= link_to course.title, course_path(course) %>
	        </h3>
			<span>
	            <a class="btn btn-blue btn-block" href="#">
	                Go To Course <i class="icon-signin"></i>
	            </a>
            </span>
		  </div>
	  </div>
	</div>
    <%- end%>
  </ul>
<% end %>
    



    
