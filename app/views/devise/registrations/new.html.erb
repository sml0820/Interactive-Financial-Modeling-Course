<% provide(:title, 'Sign up') %>


<div class="span4 offset4">

  <div class="padded">

    <div class="login box" style="margin-top: 80px;">

      <div class="box-header">
        <span class="title">Sign Up</span>
      </div>

      <div class="box-content padded">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "separate-sections"}) do |f| %>
        <%= devise_error_messages! %>

          <div class="input-prepend">
          <span class="add-on">
            <i class="icon-envelope"></i>
          </span>
		    <%= f.email_field :email, :placeholder => "e-mail" %>
          </div>

          <div class="input-prepend">
          <span class="add-on">
            <i class="icon-user"></i>
          </span>
            <%= f.text_field :name, :placeholder => "name" %>
          </div>

          <div class="input-prepend">
          <span class="add-on">
            <i class="icon-key"></i>
          </span>
            <%= f.password_field :password, :placeholder => "password" %>
          </div>

          <div class="input-prepend">
          <span class="add-on">
            <i class="icon-key"></i>
          </span>
            <%= f.password_field :password_confirmation, :placeholder => "confirm password" %>
          </div>

          <div>
             <%= f.submit "Create my account", class: "btn btn-blue", id: "signupButton"%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>

    </div>

    <div class="row-fluid">
      <div class="span6">
        <a href="#" class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Facebook</a>
      </div>
      <div class="span6">
        <a href="#" class="btn btn-twitter btn-block"><i class="icon-twitter"></i> Twitter</a>
      </div>
    </div>
  </div>
</div>