<% provide(:title, 'Sign in') %>

<div class="span4 offset4">


  <div class="padded">
    <div class="login box" style="margin-top: 80px;">

      <div class="box-header">
        <span class="title">Sign in</span>
      </div>

      <div class="box-content padded">
      	
        <div>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'separate-sections'}) do |f| %>
          <div class="input-prepend">
          <span class="add-on">
            <i class="icon-user"></i>
          </span>
          
		      <%= f.email_field :email, :placeholder => "e-mail" %>
          </div>

          <div class="input-prepend">
          <span class="add-on">
            <i class="icon-key"></i>
          </span>
          <%= f.password_field :password, :placeholder => "password" %>
          </div>

          <div>
          	<%= f.submit "Sign in", class: "btn btn-blue", id: "loginButton" %>
          </div>
 

          <% if devise_mapping.rememberable? -%>
          <div>
		    <%= f.check_box :remember_me %> 
		    <%= f.label :remember_me, class: "checkbox inline"%> 
		</div>
		  <% end -%>
		<% end %>
        </div>
       
		<div>
        	<%= render "devise/shared/links" %>
        </div>
      </div>

    </div>

    <div class="row-fluid">
      <div class="span6">
        <a href="#" class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Facebook</a>
      </div>
      <div class="span6">
        <a href="#" class="btn btn-twitter btn-block"><i class="icon-twitter"></i> Twitter</a>
      </div>
    </div>
  </div>
</div>
